{
  "manifest_version": 2,
  "name": "EnterKey",
  "description": "Enterキーを監視し、無効にする。Chat時のEnterでメッセージすることを防ぐ",
  "version": "0.1.0.0",
  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png",
    "16": "img/icon16.png"
  },
  "page_action": {
    "default_icon": "img/icon48.png",
    "default_popup": "popup.html",
    "default_title": "EnterKey"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://bizrobohelp1574754469.zendesk.com/chat/*",
        "https://rpat-internal.bizrobo.com/chat/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ]
}